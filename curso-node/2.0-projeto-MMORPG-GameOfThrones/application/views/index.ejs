<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>MMORPG - Game of Thrones</title>
		
		<meta content="width=device-width, initial-scale=1" name="viewport"> 
        <!-- JQuery -->
        <script src="components/jquery/dist/jquery.min.js"></script>
        <!-- bootstrap - link cdn -->
        <link rel="stylesheet" href="components/bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="components/izitoast/dist/css/iziToast.min.css">
        <!-- incluindo css -->
        <link href="css/cursonode.css" rel="stylesheet">
        <!-- favicon -->
        <link rel="shortcut icon" href="images/favicon.ico"/>

	</head>

	<body class="body-index">

		<nav class="navbar navbar-default navbar-static-top">
			<div class="container">
				<form class="form-inline form-entrar"  action="/autenticar" method="post">
					
					<% if(validacao.length) { %>
						<div class="alert alert-danger" role="alert">
						  	<ul>
						  		<% for (x in validacao) { %>
									<li> <%= validacao[x].msg %></li>

						  		<% } %>
						  	</ul>
						</div>
					<% } %>

					<% if(msg.length) { %>
						<div class="alert alert-danger" role="alert">
							<p> <%= msg %></p>
						</div>
					<% } %>


					<div class="form-group">				
						<input type="text" name="usuario" id="usuario" value="<%=dadosForm.usuario%>" placeholder="UsuÃ¡rio" class="form-control" autocomplete="off" />
						<input type="password" name="senha" id="senha" value="<%=dadosForm.senha%>" placeholder="Senha" class="form-control" />
						<button type="submit" class="btn btn-success">Entrar</button>
						<a href="/cadastro" type="button" class="btn btn-info">Cadastro</a>
					</div>
				</form>
			</div>
			
		</nav>

	    <div class="container">
	    	<div class="row">
	    		<div class="col-md-2"></div>

	    		<div class="col-md-8">
					<img src="images/game_of_thrones_logo.jpg" />
				</div>

	    		<div class="col-md-2"></div>
		    	</div>
	    	</div>
	    </div>	
		
	</body>

